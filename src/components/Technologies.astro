---
import TailwindIcon from "./icons/Tailwind.astro";
import NextJSIcon from "./icons/NextJS.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import PHPIcon from "./icons/PHP.astro";
import LaravelIcon from "./icons/Laravel.astro";
import ReactIcon from "./icons/React.astro";
import NodeJSIcon from "./icons/NodeJS.astro";
import CursorIcon from "./icons/CursorIcon.astro";
import BootstrapIcon from "./icons/Bootstrap.astro";
import PostgreSQLIcon from "./icons/PostgreSQL.astro";
import MongoDBIcon from "./icons/MongoDB.astro";
import MySQLIcon from "./icons/MySQL.astro";
import GitIcon from "./icons/Git.astro";
import VisualStudioCodeIcon from "./icons/VisualStudioCode.astro";
import DockerIcon from "./icons/Docker.astro";

enum TechnologyType {
  Frontend = 1,
  Backend = 2,
  Database = 3,
  Other = 4,
}
const TECHNOLOGIES = [
  {
    name: 'JavaScript',
    icon: JavaScriptIcon,
    colorClasses: 'bg-yellow-500 dark:bg-yellow-300/40',
    type: TechnologyType.Frontend
  },
  {
    name: 'HTML',
    icon: HTMLIcon,
    colorClasses: 'bg-orange-600 dark:bg-orange-500/40',
    type: TechnologyType.Frontend
  },
  {
    name: 'CSS',
    icon: CSSIcon,
    colorClasses: 'bg-blue-500 dark:bg-blue-500/40',
    type: TechnologyType.Frontend
  },
  {
    name: 'PHP',
    icon: PHPIcon,
    colorClasses: 'bg-purple-500 dark:bg-purple-300/40',
    type: TechnologyType.Backend
  },
  {
    name: 'Laravel',
    icon: LaravelIcon,
    colorClasses: 'bg-red-700 dark:bg-red-500/40',
    type: TechnologyType.Backend
  },
  {
    name: 'React',
    icon: ReactIcon,
    colorClasses: 'bg-blue-500 dark:bg-blue-500/40',
    type: TechnologyType.Frontend
  },
  {
    name: 'NodeJS',
    icon: NodeJSIcon,
    colorClasses: 'bg-green-400 dark:bg-green-500/40',
    type: TechnologyType.Backend
  },
  {
    name: 'Bootstrap',
    icon: BootstrapIcon,
    colorClasses: 'bg-purple-400 dark:bg-purple-700/40',
    type: TechnologyType.Frontend
  },
  {
    name: 'PostgreSQL',
    icon: PostgreSQLIcon,
    colorClasses: 'bg-blue-500 dark:bg-blue-500/50',
    type: TechnologyType.Database
  },
  {
    name: 'MongoDB',
    icon: MongoDBIcon,
    colorClasses: 'bg-green-500 dark:bg-green-500/40',
    type: TechnologyType.Database
  },
  {
    name: 'MySQL',
    icon: MySQLIcon,
    colorClasses: 'bg-blue-500 dark:bg-blue-800/40',
    type: TechnologyType.Database
  },
  {
    name: 'Git',
    icon: GitIcon,
    colorClasses: 'bg-orange-800 dark:bg-orange-800/40',
    type: TechnologyType.Other
  },
  {
    name: 'Visual Studio Code',
    icon: VisualStudioCodeIcon,
    colorClasses: 'bg-blue-500 dark:bg-blue-500/40',
    type: TechnologyType.Other
  },
  {
    name: 'Cursor',
    icon: CursorIcon,
    colorClasses: 'bg-blue-500 dark:bg-blue-500/40',
    type: TechnologyType.Other
  },
  {
    name: 'Docker',
    icon: DockerIcon,
    colorClasses: 'bg-blue-500 dark:bg-blue-500/40',
    type: TechnologyType.Other
  },
];
---

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
  {
    TECHNOLOGIES.map((technology) => (
      <div
        class={`flex flex-col items-center justify-center p-4 transition-all duration-300 ${technology.colorClasses} hover:scale-110 rounded-lg shadow-md`}
      >
        <technology.icon className="size-12" />
        <span class="mt-2 text-sm font-semibold text-white">
          {technology.name}
        </span>
      </div>
    ))
  }
</div>