---
import { getCollection } from 'astro:content';

// Get all certifications from the certifications collection
const certifications = await getCollection('certifications');
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {
    certifications.map((certification) => (
      <div class="bg-white/50 dark:bg-gray-800/50 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
        <h3 class="text-lg font-semibold mb-2 dark:text-white">{certification.data.title}</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">{certification.data.description}</p>
        <a 
          href={certification.data.file} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-blue-500 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
        >
          Ver certificado â†’
        </a>
      </div>
    ))
  }
</div>

